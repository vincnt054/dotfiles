!!! ALL
! Locale
*.locale: false
*.utf8: true

! Scrollback
*.saveLines: 4096

! Cursor
*.cursorBlink: true

! Escape char
*.metaSendsEscape: true
*.backarrowKey: false
*.ttyModes: erase ^?

! Clipboard
*.selectToClipboard: true

! Do not scroll with output
*.scrollTtyOutput: false
! Scroll in relation to buffer (with mouse scroll or Shift+Page Up)
*.scrollWithBuffer: true
! Scroll back to the bottom on keypress
*.scrollTtyKeypress: true

! Border
*.internalBorder: 10

!!! xterm
! Term name
xterm.termName: xterm-256color

! Font
xterm*faceName: Ubuntu Mono:style=Regular
xterm*faceSize: 13

! Keybinds
xterm*vt100.Translations: #override \
    Ctrl <Key> plus:           restore() \n\
    Ctrl Shift <Key> plus:           larger-vt-font() \n\
    Ctrl <Key> minus:          smaller-vt-font() \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD)

! Scrollbar
xterm*vt100.ScrollBar: true
xterm*vt100.scrollbar.width: 8
xterm*vt100.rightScrollBar: true
xterm*vt100.leftScrollBar: false

! Cursor
xterm*v100.cursorBlink: true

!!! URxvt
! Font
URxvt.font: xft:DejaVu Sans Mono:size=13:antialias=true

! Geometry
URxvt*geometry: 80x240+0+0
! Scrollbar
URxvt.scrollBar_right: true
URxvt.scrollBar_left: false

! Scrollback disabled in secondary screen
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! Reduce spaing of text by one pixel
URxvt.letterSpace: -1

! Extensions to URXVT
URxvt.perl-ext-common: default,matcher,selection-to-clipboard,url-select

! URL launcher
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg3

! URL without mouse
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true

! Autocopy to clipboard
URxvt.clipboard.autocopy: true

! ALL
! Background & foreground
*background: #002B36
*foreground: #D2D2D2
*borderColor: #343434

! Colors
!-------------------------
! black
*color0: #222222
*color8: #454545

! red
*color1: #9E5641
*color9: #CC896D

! green
*color2: #6C7E55
*color10: #C4DF90

! yellow
*color3: #CAAF2B
*color11: #FFE080

! blue
*color4: #7FB8D8
*color12: #B8DDEA

! magenta
*color5: #956D9D
*color13: #C18FCB

! cyan
*color6: #4c8ea1
*color14: #6bc1d0

! white
*color7: #808080
*color15: #cdcdcd
