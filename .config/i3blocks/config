# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
# Change $SCRIPT_DIR to the location of your scripts!
command=$HOME/.config/i3blocks/scripts/$BLOCK_NAME
separator_block_width=15
markup=none

[zypper-update]
interval=once
markup=pango
WATCH=^linux.*
UPDATE_COLOR=#FFFF85
QUIET=true
LABEL=

[disk]
label=/home: 
dir=$HOME
interval=30
separator=false

[disk]
label=/: 
DIR=/
interval=30
separator=true

[iface]
IFACE=eno1
LABEL=IPv4:
color=#91E78B
ADDRESS_FAMILY=inet
interval=60

[memory2]
interval=persist
markup=pango
bar_chars=_▁▂▃▄▅▆▇█
bar_size=10
critical=80
warning=50
color_critical=#FF7373
color_warning=#FFA500

